{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
    "@types"
  ],
  "exclude": ["node_modules", "dist", "/**/*.test.{ts.js}"]
}
